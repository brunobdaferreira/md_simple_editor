<div class="markdown-editor">
  <div class="md_editor">
    <div class="btn-toolbar">
      <div class="btn-group mr-2">
        <button class="<%= "btn btn-outline-dark markdown-tool" %>" data-marker="# "><strong>H1</strong></button>
        <button class="<%= "btn btn-outline-dark markdown-tool" %>" data-marker="## "><strong>H2</strong></button>
        <button class="<%= "btn btn-outline-dark markdown-tool" %>" data-marker="### "><strong>H3</strong></button>
        <button class="<%= "btn btn-outline-dark markdown-tool" %>" data-marker="#### "><strong>H4</strong></button>
        <button class="<%= "btn btn-outline-dark markdown-tool" %>" data-marker="##### "><strong>H5</strong></button>
      </div>
      <div class="btn-group mr-2">
        <button class="<%= "btn btn-outline-dark markdown-tool" %>" data-marker="_Digite seu texto itálico aqui_"><i>I</i></button>
        <button class="<%= "btn btn-outline-dark markdown-tool" %>" data-marker="**Digite seu texto negrito aqui**"><strong>B</strong></button>
      </div>
      <div class="btn-group mr-2">
        <button class="<%= "btn btn-outline-dark markdown-tool" %>" data-marker="[Texto do link](Endereço do link)">Link</button>
        <button class="<%= "btn btn-outline-dark markdown-tool-link" %>" data-marker="image" data-midia-class="<%= options[:midia_model] %>">Imagem</button>
        <button class="<%= "btn btn-outline-dark markdown-tool-link" %>" data-marker="video">Video</button>
      </div>
      <div class="btn-group mr-2">
        <button class="<%= "btn btn-outline-dark markdown-tool-preview" %>">Visualizar</button>
      </div>
    </div>
  </div>
  <%= form.text_area field, class: 'form-control markdown-textarea', rows: '30' %>
</div>